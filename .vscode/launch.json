{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach secure.server",
            "type": "cppdbg",
            "request": "attach",
            "program": "/usr/bin/sudo",
            "args": [
                "${workspaceFolder}/build/sbin/sshd",
                "-D",
                "-d",
                "-f",
                "${workspaceFolder}/build/etc/sshd_config"
            ],
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch secure.server",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/build/sbin/sshd",
            "args": [
                "-D",
                "-d",
                "-f",
                "${workspaceFolder}/build/etc/sshd_config"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/external/libs/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true,
                },
                {
                    "description": "Enable follow child for gdb",
                    "text": "-gdb-set follow-fork-mode child",
                    "ignoreFailures": true,
                },
            ]
        },
        {
            "name": "(gdb) Launch secure.ssh",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/ssh",
            "args": [
                "-c",
                "none",
                "-F",
                "${workspaceFolder}/build/etc/ssh_config",
                "-w",
                "any",
                "root@192.168.88.243",
                "-p3333",
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}/build/bin",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/external/libs/lib",
                },
                {
                    "name": "REDIS_HOST",
                    "value": "localhost:6379",
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch ferrumtest",
            "type": "cppdbg",
            "request": "launch",
            "preLaunchTask": "buildtest",
            "program": "${workspaceFolder}/ferrumtest/ferrum.test",
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [
                {
                    "name": "LD_LIBRARY_PATH",
                    "value": "${workspaceFolder}/external/libs/lib"
                }
            ],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}