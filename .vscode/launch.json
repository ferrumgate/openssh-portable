{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Attach secure.server",
            "type": "cppdbg",
            "request": "attach",
            "program": "${workspaceFolder}/build/sbin/sshd",
            "processId": "${command:pickProcess}",
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch secure.server",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/sbin/sshd",
            "args": [
                "-D",
                "-f",
                "${workspaceFolder}/build/etc/sshd_config"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "(gdb) Launch secure.ssh",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/bin/ssh",
            "args": [
                "-c",
                "none",
                "hframed@127.0.0.1",
                "-p3333",
                "-F",
                "${workspaceFolder}/build/etc/ssh_config"
            ],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}